{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "lib": ["es6", "dom"],
      "esModuleInterop": true,
      "downlevelIteration": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }

